<h2>Search Authors</h2>
<form action="/authors" method="GET">
<label>Name</label>
<input type="text" name="name" id="" placeholder="Please Enter your name" values="<%= searchOptions.name %>">
<button type="submit">Search</button>
</form>

<h2>List of Available Authors</h2>

<% authors.forEach(author => { %>
    <div><%= author.name %></div>
<% }) %>